{
  "manifest_version": 3,
  "name": "Авто Сборщик Наград",
  "version": "1.0",
  "description": "Автоматически собирает награды на сайте.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}